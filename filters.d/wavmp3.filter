#!/bin/bash
# CONVERTER
# CONVERTER NAME=Audio to MP3
# CONVERTER INPUT_EXTENSION=wav
# CONVERTER INPUT_MIME=audio/x-wav
# CONVERTER OUTPUT_EXTENSION=mp3
# CONVERTER OUTPUT_MIME=audio/mpeg
# CONVERTER VIEWER=mplayer
# CONVERTER NEEDED_TOOLS=lame
# CONVERTER

export INPUT_FILE="$1"
export OUTPUT_FILE="$2"
. /etc/converter/tools
init_filter

echo "Filter Audio to MP3"
echo "INPUT_FILE = $INPUT_FILE"
echo "OUTPUT_FILE = $OUTPUT_FILE"

lame "$INPUT_FILE" "$OUTPUT_FILE"